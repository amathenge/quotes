{% macro login(url, recaptcha) -%}
<h1 class="text-center">Login Form</h1>
<form action="{{ url }}" method="POST">
<div class="form-group my-2">
    <label for="username">Email Login</label>
    <input class="form-control" type="email" id="username" name="username" placeholder="user@email.com" maxlength="20" required>
</div>
<div class="form-group my-2">
    <label for="box2">Password</label>
    <input class="form-control" type="password" id="password" name="password" maxlength="20" required>
</div>
<div class="form-group d-grid my-2 text-center">
    {{ recaptcha }}
    <button class="btn btn-primary mt-3" type="submit">LOGIN</button>
</div>
</form>
{%- endmacro %}